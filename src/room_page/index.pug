doctype
html(lang="ru")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no")
        title= "Страница комнаты"
        link(rel = "stylesheet" href = "room_page.scss")
        script(src="js/library.js")
        script(src="js/room_page.js")
        script(src="../ui_kit/input_fields/two_places/two_places_button.js")
        script(src="../ui_kit/input_fields/one_place/one_place_button.js")
        script(type="text/javascript"). 
            $(function(){ var CalendarStartDate = "someText"; var CalendarEndDate = "someText";});
            var inputField;
            function fillDate() {
                if(CalendarStartDate == "" || CalendarEndDate == ""){
                    $('.main__price-calculator-start-date').val("");
                    $('.main__price-calculator-end-date').val("");
                    return;
                }
                $('.main__price-calculator-start-date').val(CalendarStartDate.getDate() + "." + CalendarStartDate.getMonth() + "." + CalendarStartDate.getFullYear());
                $('.main__price-calculator-end-date').val(CalendarEndDate.getDate() + "." + CalendarEndDate.getMonth() + "." + CalendarEndDate.getFullYear());
            }
    body
        header
            include ../ui_kit/header/header-registration/header-registration.pug
            +header-registration("room-page-header")
        .main
            div.main__image_container
                div.main__central_image
                div.main__vertical_images
                    div.main__second_image
                    div.main__third_image
            div.down-content
                div.main__content
                    div.main__information-block
                        div.main__benefits
                            div.main__benefits-description Сведения о номере
                            div.main__benefit
                                div.material-icons.main__pic insert_emoticon
                                div.main__benefit-description <b>Комфорт</b><br>Шумопоглощающие стены
                            div.main__benefit
                                div.material-icons.main__pic location_city
                                div.main__benefit-description <b>Удобство</b><br>Окно в каждой из спален
                            div.main__benefit
                                div.material-icons.main__pic whatshot
                                div.main__benefit-description <b>Уют</b><br>Номер оснащён камином
                        div.main__disco-reviews
                            div.main__disco-description Впечатления от номера
                            div.main__disco-content
