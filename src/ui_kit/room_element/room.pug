mixin room(number, type, price, rating, number_reviews, ...image_sources)
    div(class = "room-" + number.split(' ')[1], data-number-of-slide=1)
        div.room__slider
            i.material-icons(id = "slider__left-button-" + number.split(' ')[1]) expand_more
            div(id = "slider__left-area-button-" + number.split(' ')[1])
            i.material-icons(id = "slider__right-button-" + number.split(' ')[1]) expand_more
            div(id = "slider__right-area-button-" + number.split(' ')[1])
            ul.slider__legend
                li.legend__el
                li.legend__el
                li.legend__el
                li.legend__el
            div.slider__image-container
                each source in image_sources
                    img.image-container__main_img(src=source)
        div.room__description-container
            div.room__up-container
                div.up-container__type
                    span №
                    span= number
                    span= type
                div.up-container__price
                    span= price
                    span в сутки
            div.room__down-container
                div.down-container__rating
                    - for (var i=1; i<=rating; i++) {
                        i.material-icons.down-container__star-elemet star
                    - }
                    - for (var i=1; i<=5 - rating; i++) {
                        i.material-icons.down-container__star-elemet star_border
                    - }
                div.down-container__rewiews
                    span=number_reviews
                    span  Отзывов

