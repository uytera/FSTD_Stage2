mixin calendar(modificator)
    script(src="../ui_kit/calendar/js/calendar-main.js")
    div(class='calendar ' + modificator)
        div.calendar__main
            div.calendar__days-name
                div Пн
                div Вт
                div Ср
                div Чт
                div Пт
                div Сб
                div Вс
            div.calendar__days